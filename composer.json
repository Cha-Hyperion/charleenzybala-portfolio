{
    "name": "gaetan/demo-wordpress-install",
    "description": "Installation custom de WP",
    "authors": [
        {
            "name": "GaetanOclock",
            "email": "gaetan@oclock.io"
        }
    ],
    "require": {
        "johnpbloch/wordpress": "^5.4",
        "wpackagist-theme/twentytwenty": "^1.4",
        "wpackagist-plugin/akismet": "^4.1"
    },
    "extra": {
        "wordpress-install-dir": "wp"
    },
    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        }
    ],
    "scripts": {
       "build-theme-assets": "cd wp-content/themes/your-theme/src && parcel build js/main.js --public-url ./"
    }
}